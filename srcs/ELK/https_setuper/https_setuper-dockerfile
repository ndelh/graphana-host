FROM elasticsearch:8.19.0
USER root
COPY ./tools/certif_script.sh /usr/share/elasticsearch/certif_script.sh
RUN apt-get update  && apt-get install -y unzip openssl && apt-get clean && rm -rf /var/lib/apt/lists/*
RUN chmod +x ./certif_script.sh
ENTRYPOINT  [ "/usr/share/elasticsearch/certif_script.sh" ]
